{
  "manifest_version": 2,
  "name": "like-as-download",
  "version": "0.2",

  "description": "The youtube like button will serve as a download button as well.",

  "icons": {
    "48": "icons/icon.png"
  },

  "permissions": [
    "http://resamvi.io:8080/",
    "https://www.youtube.com/service_ajax?name=likeEndpoint",
    "downloads",
    "webRequest"
  ],

  "background": {
    "scripts": ["chrome.js"]
  }
}